<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/constraintLayout4"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="@drawable/home_screen_header_bg"
              android:elevation="4dp"
              android:minHeight="?attr/actionBarSize"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent">


                <ImageView
                  android:id="@+id/add_customer_screen_new_design_iv_back_btn"
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:layout_marginStart="32dp"
                  android:src="@drawable/ic_arrow_left_square_icon_svg"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

                <TextView
                  android:id="@+id/textView5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/lato_regular"
                  android:lineHeight="21.6dp"
                  android:text="Edit Customers"
                  android:textColor="@color/black"
                  android:textFontWeight="700"
                  android:textSize="18dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toStartOf="@+id/add_customer_screen_new_design_iv_reports"
                  app:layout_constraintStart_toEndOf="@+id/add_customer_screen_new_design_iv_back_btn"
                  app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                  android:id="@+id/add_customer_screen_new_design_iv_reports"
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:layout_marginEnd="32dp"
                  android:src="@drawable/ic_chart_svg"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:orientation="vertical"
              app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:fontFamily="@font/lato_regular"
                  android:padding="5dp"
                  android:text="@string/customer_name"
                  android:textColor="#494949"
                  android:textFontWeight="700"
                  android:textSize="18dp" />

                <EditText
                  android:id="@+id/etxt_customer_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="22dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginRight="35dp"
                  android:background="@drawable/round_border"
                  android:fontFamily="@font/lato_regular"
                  android:hint="@string/customer_name"
                  android:inputType="text"
                  android:padding="16dp"
                  android:textColor="#494949"
                  android:textFontWeight="700"
                  android:textSize="17dp" />

                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:fontFamily="@font/lato_regular"
                  android:padding="5dp"
                  android:text="@string/customer_cell"
                  android:textColor="#494949"
                  android:textFontWeight="700"
                  android:textSize="17dp" />

                <EditText
                  android:id="@+id/etxt_customer_cell"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="22dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginEnd="35dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/round_border"
                  android:fontFamily="@font/lato_regular"
                  android:hint="@string/customer_cell"
                  android:inputType="phone"
                  android:padding="16dp"
                  android:textColor="#494949"
                  android:textFontWeight="700"
                  android:textSize="17dp" />

                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:fontFamily="@font/lato_regular"
                  android:padding="5dp"
                  android:text="@string/customer_email"
                  android:textColor="#494949"
                  android:textFontWeight="700"
                  android:textSize="18dp" />

                <EditText
                  android:id="@+id/etxt_email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="22dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginRight="35dp"
                  android:background="@drawable/round_border"
                  android:fontFamily="@font/lato_regular"
                  android:hint="@string/customer_email"
                  android:inputType="text"
                  android:padding="16dp"
                  android:textColor="#494949"
                  android:textFontWeight="700"
                  android:textSize="17dp" />

                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:fontFamily="@font/lato_regular"
                  android:padding="5dp"
                  android:text="@string/customer_address"
                  android:textColor="#494949"
                  android:textFontWeight="700"
                  android:textSize="18dp" />

                <EditText
                  android:id="@+id/etxt_address"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:layout_marginLeft="22dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginRight="35dp"
                  android:background="@drawable/round_border"
                  android:fontFamily="@font/lato_regular"
                  android:gravity="start"
                  android:hint="@string/customer_address"
                  android:inputType="textMultiLine"
                  android:padding="16dp"
                  android:textColor="#494949"
                  android:textFontWeight="700"
                  android:textSize="17dp" />

                <TextView
                  android:id="@+id/txt_edit_customer"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="32dp"
                  android:layout_marginRight="40dp"
                  android:layout_marginBottom="18dp"
                  android:background="@drawable/rounded_button"
                  android:fontFamily="@font/lato_regular"
                  android:gravity="center"
                  android:padding="10dp"
                  android:text="@string/edit"
                  android:textColor="#ffffff"
                  android:textFontWeight="700"
                  android:textSize="17dp"
                  android:textStyle="bold" />

                <TextView
                  android:id="@+id/txt_update_customer"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="32dp"
                  android:layout_marginRight="40dp"
                  android:layout_marginBottom="18dp"
                  android:background="@drawable/rounded_button"
                  android:fontFamily="@font/lato_regular"
                  android:textFontWeight="700"
                  android:gravity="center"
                  android:padding="10dp"
                  android:text="@string/update_information"
                  android:textColor="#ffffff"
                  android:textSize="17dp"
                  android:textStyle="bold" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>