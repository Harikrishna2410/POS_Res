<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout4"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:background="@drawable/home_screen_header_bg"
      android:elevation="4dp"
      android:minHeight="?attr/actionBarSize"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">


        <ImageView
          android:id="@+id/add_supplier_new_design_iv_back_btn"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_marginStart="32dp"
          android:src="@drawable/ic_arrow_left_square_icon_svg"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/lato_regular"
          android:lineHeight="21.6dp"
          android:text="All Suppliers"
          android:textColor="@color/black"
          android:textFontWeight="700"
          android:textSize="18dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/add_supplier_new_design_iv_reports"
          app:layout_constraintStart_toEndOf="@+id/add_supplier_new_design_iv_back_btn"
          app:layout_constraintTop_toTopOf="parent" />

        <ImageView
          android:id="@+id/add_supplier_new_design_iv_reports"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_marginEnd="32dp"
          android:src="@drawable/ic_chart_svg"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="20dp"
              android:fontFamily="@font/lato_regular"
              android:padding="5dp"
              android:text="@string/supplier_name"
              android:textFontWeight="700"
              android:textSize="18dp"
              android:theme="@style/Textview_form" />

            <EditText
              android:id="@+id/etxt_supplier_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="22dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="35dp"
              android:background="@drawable/round_border"
              android:fontFamily="@font/sailec_regular"
              android:hint="@string/supplier_name"
              android:inputType="text"
              android:padding="16dp"
              android:theme="@style/Edittext_form"
                android:textSize="16dp" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:fontFamily="@font/sailec_regular"
              android:padding="5dp"
              android:text="@string/supplier_contact_person"
              android:theme="@style/Textview_form" />

            <EditText
              android:id="@+id/etxt_supplier_contact_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="22dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="35dp"
              android:background="@drawable/round_border"
              android:fontFamily="@font/sailec_regular"
              android:hint="@string/supplier_contact_person"
              android:inputType="text"
              android:padding="16dp"
              android:textSize="16dp"
              android:theme="@style/Edittext_form" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:fontFamily="@font/sailec_regular"
              android:padding="5dp"
              android:text="@string/supplier_cell"
              android:theme="@style/Textview_form" />

            <EditText
              android:id="@+id/etxt_supplier_cell"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="22dp"
              android:layout_marginTop="5dp"
              android:layout_marginEnd="35dp"
              android:layout_marginBottom="5dp"
              android:background="@drawable/round_border"
              android:fontFamily="@font/sailec_regular"

              android:hint="@string/supplier_cell"
              android:inputType="phone"
              android:padding="16dp"
              android:textSize="16dp"
              android:theme="@style/Edittext_form" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:fontFamily="@font/sailec_regular"
              android:padding="5dp"
              android:text="@string/supplier_email"
              android:theme="@style/Textview_form" />

            <EditText
              android:id="@+id/etxt_supplier_email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="22dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="35dp"
              android:background="@drawable/round_border"
              android:fontFamily="@font/sailec_regular"
              android:hint="@string/supplier_email"
              android:inputType="text"
              android:padding="16dp"
              android:textSize="16dp"
              android:theme="@style/Edittext_form" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:fontFamily="@font/sailec_regular"
              android:padding="5dp"
              android:text="@string/supplier_address"
              android:theme="@style/Textview_form" />

            <EditText
              android:id="@+id/etxt_supplier_address"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:layout_marginLeft="22dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="35dp"
              android:background="@drawable/round_border"
              android:fontFamily="@font/sailec_regular"
              android:gravity="start"
              android:hint="@string/supplier_address"
              android:inputType="textMultiLine"
              android:padding="16dp"
              android:textSize="16dp"
              android:theme="@style/Edittext_form" />

            <TextView
                android:id="@+id/txt_add_supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/sailec_regular"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/add_supplier"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>